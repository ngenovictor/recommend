<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:id="@+id/searchResults"
    tools:context="com.herokuapp.veekay.recommend.ui.SearchTabFragment">
    <ImageView
        android:id="@+id/searchedUserImage"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/userNameDesc"
        android:text="user name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/searchedUserImage"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/searchedUserUserName"
        android:text="\@ngenovictor"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/secondNameDesc"/>
    <TextView
        android:id="@+id/firstNameDesc"
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/searchedUserImage"
        app:layout_constraintTop_toBottomOf="@+id/userNameDesc"/>
    <TextView
        android:id="@+id/searchedUserFirstName"
        android:text="Victor"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchedUserUserName"
        app:layout_constraintLeft_toRightOf="@id/secondNameDesc"/>
    <TextView
        android:id="@+id/secondNameDesc"
        android:text="Second Name:"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/searchedUserImage"
        app:layout_constraintTop_toBottomOf="@+id/firstNameDesc"/>
    <TextView
        android:id="@+id/searchedUserSecondName"
        android:text="Ngeno"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchedUserFirstName"
        app:layout_constraintLeft_toRightOf="@id/secondNameDesc"/>
    <Button
        android:id="@+id/addFriendButton"
        android:text="Add Friend"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/searchedUserImage"
        app:layout_constraintTop_toBottomOf="@+id/secondNameDesc"/>





</android.support.constraint.ConstraintLayout>
